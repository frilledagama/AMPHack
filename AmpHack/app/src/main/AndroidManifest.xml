<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AmpHack.book_transit">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.AmpHack.book_transit.Chat.Chat_Sender"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.AmpHack.book_transit.Menu.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.AmpHack.book_transit.Settings.SettingsActivity"
            android:parentActivityName="com.AmpHack.book_transit.Menu.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.AmpHack.book_transit.Chat.ChatActivity"
            android:parentActivityName="com.AmpHack.book_transit.Menu.MainActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.AmpHack.book_transit.DataTransfer.DataTransferActivity"
            android:parentActivityName="com.AmpHack.book_transit.Menu.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.AmpHack.book_transit.Menu.ReceiptActivity"
            android:parentActivityName="com.AmpHack.book_transit.Menu.MainActivity"/>
    </application>

</manifest>